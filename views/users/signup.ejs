<%layout("/layouts/boilerplate")-%>

<div class="row ">
    <h1 class="col-6 offset-3 mt-3">SignUp on Wanderlust</h1>
    <div class="col-6 offset-3 mt-3">
        <form action="/signup" method="post" novalidate class="needs-validation" >

        <div class="mt-3">
        <label for="username" class="form-label">Username</label>
        <input type="text" name="username" id="username" class="form-control" required> 
        <div class="valid-feedback">Looks good!</div>
        </div>

        <div class="mt-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" name="email" id="email" class="form-control" required>
        </div>

        <div class="mt-3">
        <label for="password" class="form-label">Passwod</label>
        <input type="password" name="password" id="password" class="form-control" required>
        </div>

        <button class="btn btn-success mt-3">Signup</button>
        </form>
    </div>
 </div>